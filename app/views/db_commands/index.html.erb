                <h2>MySQL コマンド</h2>
<pre><code>-- データベースの作成
CREATE DATABASE <%= @db_commands.db_name %> CHARACTER SET utf8;
GRANT ALL ON <%= @db_commands.db_name %>.* TO '<%= @db_commands.db_user %>'@localhost IDENTIFIED BY '<%= @db_commands.db_pass %>';
FLUSH PRIVILEGES;

-- ほかのコマンド
CREATE TABLE tbl_name(
id MEDIUMINT AUTO_INCREMENT NOT NULL PRIMARY KEY,
col1 VARCHAR ( 256 ) default NULL,
col2 TEXT,
col3 TINYINT(1) default 0,
col4 DATETIME);

Insert INSERT INTO tbl_name (col1,col2) VALUES(15,col1*2);
Delete DELETE FROM tbl_name WHERE user = '<%= @db_commands.db_user %>'
Update UPDATE tbl_name SET col1 = col1 + 1;

ALTER TABLE tbl_name ADD col1;
ALTER TABLE tbl_name CHANGE col1;
ALTER TABLE tbl_name DROP col1;
</code></pre>
