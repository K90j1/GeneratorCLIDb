                <h2>PostgreSQL コマンド</h2>

<pre><code>-- データベースの作成
CREATE USER <%= @db_commands.db_user %> WITH PASSWORD '<%= @db_commands.db_pass %>';
CREATE DATABASE <%= @db_commands.db_name %> ENCODING 'UTF8';
GRANT ALL PRIVILEGES ON DATABASE <%= @db_commands.db_name %> TO <%= @db_commands.db_user %>;

-- ほかのコマンド
CREATE TABLE tbl_name(
id BIGSERIAL PRIMARY KEY,
col1 VARCHAR ( 256 ) default NULL,
col2 TEXT,
col3 BOOLEAN default false,
col4 TIMESTAMP default NULL);

Insert INSERT INTO tbl_name (col1,col2) VALUES(15,col1*2);
Delete DELETE FROM tbl_name WHERE user = '<%= @db_commands.db_user %>'
Update UPDATE tbl_name SET col1 = col1 + 1;

ALTER TABLE tbl_name ADD COLUMN col1;
ALTER TABLE tbl_name ALTER COLUMN col1 TYPE varchar(80);
ALTER TABLE tbl_name DROP COLUMN col1;
</code></pre>
